{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "PasswordGenerator",
            "request": "launch",
            "mainClass": "br.adv.cra.util.PasswordGenerator",
            "projectName": "cra-backend"
        },
        {
            "type": "java",
            "name": "CraBackendApplication",
            "request": "launch",
            "mainClass": "br.adv.cra.CraBackendApplication",
            "projectName": "cra-backend",
            "vmArgs": [
                "-Djavax.net.ssl.trustStore=",
                "-Djavax.net.ssl.keyStore=",
                "-Djdk.tls.client.protocols=TLSv1.2",
                "-Dserver.ssl.enabled=false"
            ]
        },
        {
            "type": "java",
            "name": "CraBackendApplication (Dev Profile)",
            "request": "launch",
            "mainClass": "br.adv.cra.CraBackendApplication",
            "projectName": "cra-backend",
            "vmArgs": [
                "-Dspring.profiles.active=dev",
                "-Djavax.net.ssl.trustStore=",
                "-Djavax.net.ssl.keyStore=",
                "-Djdk.tls.client.protocols=TLSv1.2",
                "-Dserver.ssl.enabled=false"
            ]
        },
        {
            "type": "java",
            "name": "CraBackendApplication (No SSL)",
            "request": "launch",
            "mainClass": "br.adv.cra.CraBackendApplication",
            "projectName": "cra-backend",
            "vmArgs": [
                "-Djavax.net.ssl.trustStore=",
                "-Djavax.net.ssl.keyStore=",
                "-Djdk.tls.client.protocols=TLSv1.2",
                "-Dserver.ssl.enabled=false"
            ]
        },
        {
            "type": "java",
            "name": "CraBackendApplication (Debug)",
            "request": "launch",
            "mainClass": "br.adv.cra.CraBackendApplication",
            "projectName": "cra-backend",
            "vmArgs": [
                "-Dspring.profiles.active=dev",
                "-Djavax.net.ssl.trustStore=",
                "-Djavax.net.ssl.keyStore=",
                "-Djdk.tls.client.protocols=TLSv1.2",
                "-Dserver.ssl.enabled=false",
                "-Djava.security.manager=allow"
            ]
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}"
        }
    ]
}